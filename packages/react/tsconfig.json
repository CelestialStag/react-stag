{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "types": ["react"]
  },
  "include": [
    "./src/**/*.ts",
    "./typings/**/*.d.ts",
    "../../typings/**/*.d.ts"
  ],
  "exclude": ["./node_modules/", "./dist/**/*"]
}
